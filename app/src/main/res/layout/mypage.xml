<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- 사용자 프로필과 이름 -->
    <RelativeLayout
        android:id="@+id/profileHeader"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:padding="13dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp">

        <!-- 프로필 이미지 -->
        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:src="@drawable/profile"/>

        <!-- 사용자 이름 -->
        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@id/profileImage"
            android:layout_marginTop="18dp"
            android:text="@string/username"
            android:textColor="#5B5853"
            android:textSize="22sp" />

        <!-- 사용자 아이디 -->
        <LinearLayout
            android:id="@+id/buttonContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/username"
            android:layout_toEndOf="@id/profileImage"
            android:layout_marginTop="5dp">

            <!-- 이건 구현시 글자 빼야함 -->
            <TextView
                android:id="@+id/userid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:text="#helloworld!"
                android:textColor="@color/Brown"
                android:textSize="13sp" />
        </LinearLayout>
    </RelativeLayout>



    <!-- 나의 활동 CardView -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewActivity"
        android:layout_width="344dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="25dp"
        android:backgroundTint="@drawable/edit_text_background"
        card_view:cardCornerRadius="16dp"
        card_view:cardElevation="4dp"
        android:layout_below="@+id/profileHeader">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3">

            <!-- 지원 현황 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/MyFirstActivity"
                    android:textColor="#5B5853"
                    android:textSize="14sp" />

                <!-- 이건 구현시 숫자 빼야함 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textColor="#5B5853"
                    android:textSize="18sp" />
            </LinearLayout>

            <!-- 지원 결과 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/MySecondActivity"
                    android:textSize="14sp"
                    android:textColor="#5B5853" />

                <!-- 이건 구현시 숫자 빼야함 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="18sp"
                    android:textColor="#5B5853" />
            </LinearLayout>

            <!-- 봉사 이력 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/MyThirdActivity"
                    android:textSize="14sp"
                    android:textColor="#5B5853" />

                <!-- 이건 구현시 숫자 빼야함 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="18sp"
                    android:textColor="#5B5853" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 회원 정보부터 약관 및 정책까지의 TextView 요소들 -->
    <LinearLayout
        android:id="@+id/textViewContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="23dp"
        android:orientation="vertical"
        android:layout_below="@+id/cardViewActivity">

        <!-- 회원 정보 -->
        <TextView
            android:id="@+id/mem_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mem_info"
            android:textSize="16sp"
            android:padding="16dp"
            android:textColor="#555555"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true" />

        <!-- 알림 -->
        <TextView
            android:id="@+id/notifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/notifications"
            android:textSize="16sp"
            android:padding="16dp"
            android:textColor="#555555"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true" />

        <!-- 자주 묻는 질문 -->
        <TextView
            android:id="@+id/faq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/faq"
            android:textSize="16sp"
            android:padding="16dp"
            android:textColor="#555555"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true" />

        <!-- 공지사항 -->
        <TextView
            android:id="@+id/announcements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/announcements"
            android:textSize="16sp"
            android:padding="16dp"
            android:textColor="#555555"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true" />

        <!-- 약관 및 정책 -->
        <TextView
            android:id="@+id/policies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/policies"
            android:textSize="16sp"
            android:padding="16dp"
            android:textColor="#555555"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true" />

        <!-- 버전 정보 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/version_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/version_info"
                android:textSize="16sp"
                android:textColor="#555555"
                android:layout_marginEnd="200dp"/>

            <!-- 이건 구현시 숫자 빼야함 -->
            <TextView
                android:id="@+id/version_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.0.0"
                android:textSize="16sp"
                android:textColor="#5B5853"
                android:layout_marginStart="10dp" />
        </LinearLayout>

        <!-- 로그 아웃 -->
        <TextView
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/logout"
            android:textSize="16sp"
            android:padding="16dp"
            android:textColor="#555555"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true" />

        <!-- 탈퇴하기 -->
        <TextView
            android:id="@+id/Withdrawal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/Withdrawal"
            android:textSize="16sp"
            android:padding="16dp"
            android:textColor="#555555"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true" />


    </LinearLayout>

    <!-- 하단 바 -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_alignParentBottom="true"
        android:background="@color/bottomBar"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- chatting -->
        <ImageView
            android:id="@+id/chatting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/chatting" />

        <!-- map -->
        <ImageView
            android:id="@+id/map"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/map" />

        <!-- home -->
        <ImageView
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/home" />

        <!-- calendar -->
        <ImageView
            android:id="@+id/calendar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/calendar" />

        <!-- mypage -->
        <ImageView
            android:id="@+id/mypage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/mypage" />

    </LinearLayout>
</RelativeLayout>
