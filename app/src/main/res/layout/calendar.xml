<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8B998C"
    tools:context=".MainActivity">

    <!-- Calendar 텍스트 -->
    <TextView
        android:id="@+id/calendarTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calendarTitle"
        android:textSize="24sp"
        android:textColor="#5B5853"
        android:layout_marginTop="14dp"
        android:layout_centerHorizontal="true" />

    <!-- 캘린더뷰 -->
    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/calendarTitle"
        android:layout_marginTop="0dp" />

    <!-- 날짜 선택 시 보이는 봉사활동 예정이나 기록들 -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/calendarView"
        android:scrollbars="vertical"
        android:background="@drawable/rounded_corner"
        android:contentDescription="@string/scrollview_description">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 봉사활동 예정이나 기록들을 보여주는 내용 -->

        </LinearLayout>
    </ScrollView>

    <!-- 선택된 날짜 표시 -->
    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/calendarView"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="@string/dateTextView"
        android:textSize="18sp"
        android:textColor="#5B5853" />

    <!-- 하단 바 -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_alignParentBottom="true"
        android:background="@color/bottomBar"
        android:orientation="horizontal"
        android:gravity="center">

            <!-- chatting -->
            <ImageView
                android:id="@+id/chatting"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/chatting" />

            <!-- map -->
            <ImageView
                android:id="@+id/map"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/map" />

            <!-- home -->
            <ImageView
                android:id="@+id/home"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/home" />

            <!-- calendar -->
            <ImageView
                android:id="@+id/calendar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/calendar" />

            <!-- mypage -->
            <ImageView
                android:id="@+id/mypage"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/mypage" />

    </LinearLayout>
</RelativeLayout>